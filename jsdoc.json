{
  "source": {
    "include": [
      "base32.js",
      "package.json",
      "README.md"
    ]
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "applicationName": "base32js",
    "meta": {
      "title": "base32js",
      "description": "base32js - Base 32 for JavaScript",
      "keyword": [
        "base32",
        "base32hex",
        "crockford",
        "rfc2938",
        "rfc4648",
        "encoding",
        "decoding"
      ]
    },
    "default": {
      "outputSourceFiles": true
    },
    "linenums": true
  },
  "opts": {
    "destination": "docs"
  }
}
